<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lay_linear_header"
        style="@style/ListCountryLinear">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_flag_country"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_launcher_background"/>
        <TextView
            android:id="@+id/txt_country_name"
            android:text="@string/countries"
            style="@style/TextListCountryName" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_total_case"
            android:text="@string/cases"
            android:textColor="@color/black"
            style="@style/TextListCountryTotal" />

        <TextView
            android:id="@+id/txt_total_recovered"
            android:text="@string/recovered"
            android:textColor="@color/blue"
            style="@style/TextListCountryTotal"/>

        <TextView
            android:id="@+id/txt_total_deaths"
            android:text="@string/deaths"
            android:textColor="@color/red"
            style="@style/TextListCountryTotal"/>



    </LinearLayout>

</LinearLayout>